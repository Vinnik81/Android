<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    tools:context=".SettingsTicTacToe">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/vectorstock_28341945"/>

    <RelativeLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500">
        <ImageView
            android:id="@+id/backBtn"
            android:onClick="onBackMenu"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/baseline_chevron_left_24"/>

    </RelativeLayout>



    <Button
        android:id="@+id/btnRestHumanVsHuman"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FF0404"
        android:text="@string/RESET"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnRestHumanVsPC"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FF0404"
        android:text="@string/RESET2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_below="@id/btnRestHumanVsHuman"/>

    <Button
        android:id="@+id/btnRestHumanVsPCHard"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FF0404"
        android:text="@string/RESET3"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_below="@id/btnRestHumanVsPC"/>

</RelativeLayout>